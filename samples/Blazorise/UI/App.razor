@using Stl.Text

@* Note: Cortex.Net @attribute [Observer] does not work in the toplevel App.razor
   Therefore, all potentially reactive elements are best extracted into their own component, AppBody
*@

<CascadingAuthState SessionId="@SessionId">
    <ThemeProvider Theme="@Theme">
        <AppBody />
    </ThemeProvider>
</CascadingAuthState>

@code {
    // https://blazorise.com/docs/theming/
    private Theme Theme { get; } = new() { IsGradient = true, IsRounded = false };

    [Parameter]
    public string SessionId { get; set; } = Symbol.Empty;
}


